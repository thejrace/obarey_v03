<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="@color/main_white"
    android:padding="5dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/avatar_test"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Ahmet Kanbur"
                android:id="@+id/header_user_name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header_user_level"
                android:drawableLeft="@drawable/ico_header_level"
                android:drawableStart="@drawable/ico_header_level"
                android:drawablePadding="@dimen/header_fragment_summary_drawable_padding"
                android:layout_marginRight="@dimen/header_fragment_summary_margin"
                android:layout_marginEnd="@dimen/header_fragment_summary_margin"
                android:text="26"
                android:textSize="@dimen/header_fragment_text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header_user_points"
                android:drawableLeft="@drawable/ico_header_points"
                android:drawableStart="@drawable/ico_header_points"
                android:drawablePadding="@dimen/header_fragment_summary_drawable_padding"
                android:text="9287"
                android:textSize="@dimen/header_fragment_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/ico_header_notf"
            android:id="@+id/requests_notf_btn" />

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/ico_header_settings"
            android:id="@+id/settings_notf_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
</LinearLayout>